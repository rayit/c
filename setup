#! /bin/sh

mkdir build
cc -static -g -W -Wall -Wextra -o build/hello_world hello_world.c
doas install -o www -g www -m 0500 build/hello_world /var/www/cgi-bin

# insert_data
gcc -static -g -W -Wall -Wextra -o build/insert_data insert_data.c -I /usr/local/include -L /usr/local/lib -pthread -lsqlite3 -lm
doas install -o www -g www -m 0500 build/insert_data /var/www/cgi-bin

# db_example
cc -static -g -W -Wall -Wextra -o build/select_cars select_cars.c -I /usr/local/include -L /usr/local/lib -pthread -lsqlite3 -lm
doas install -o www -g www -m 0500 build/select_cars /var/www/cgi-bin

# login
g++ -I/usr/local/include -static -o build/login login.c -L/usr/local/lib -lsqlite3
doas install -o www -g www -m 0500 build/login /var/www/cgi-bin

doas install -o www -g www -m 0500 index.html /var/www/htdocs

# somehow sqlite3 does not work when main folder is not writable by www
doas chown www /var/www/cgi-bin

doas rcctl enable slowcgi
doas rcctl start slowcgi
doas rcctl check slowcgi
doas rcctl restart httpd
